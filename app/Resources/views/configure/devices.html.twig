{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <div class="title">Devices</div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="datatable table table-striped" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Device ID</th>
                            <th>Current State</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Api Account</th>
                            <th>Api Provider</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Device ID</th>
                            <th>Current State</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Api Account</th>
                            <th>Api Provider</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for device in devices %}
                            <tr>
                                <td>{{ device.deviceId }}</td>
                                <td>{% if device.state == 1 %}<span class="badge success" style="color: #ffffff;">On</span>{% else %}<span class="badge danger" style="color: #ffffff;">Off</span>{% endif %}</td>
                                <td>{{ device.name }}</td>
                                <td>{{ device.room.name }}</td>
                                <td>{{ device.apiCredential.userName }}</td>
                                <td>{{ device.apiCredential.apiProvider.name }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <div class="title">Add Device</div>
                    </div>
                </div>
                <div class="card-body">

                    {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}

                    <div class="form-group">
                        {{ form_label(form.deviceId) }}
                        {{ form_widget(form.deviceId) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.room) }}
                        {{ form_widget(form.room) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.apiCredential) }}
                        {{ form_widget(form.apiCredential) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.submit) }}
                        {{ form_widget(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
